{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ShepLang",
  "scopeName": "source.shep",
  "fileTypes": ["shep"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#app-declaration" },
    { "include": "#data-block" },
    { "include": "#view-block" },
    { "include": "#action-block" },
    { "include": "#task-block" },
    { "include": "#entity-block" },
    { "include": "#screen-block" },
    { "include": "#flow-block" },
    { "include": "#rule-block" },
    { "include": "#integration-block" },
    { "include": "#ai-construct" },
    { "include": "#strings" },
    { "include": "#field-types" },
    { "include": "#modifiers" },
    { "include": "#keywords" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.shep",
          "match": "#.*$"
        }
      ]
    },
    "app-declaration": {
      "patterns": [
        {
          "match": "^(app)\\s+(\"[^\"]+\")",
          "captures": {
            "1": { "name": "keyword.declaration.app.shep" },
            "2": { "name": "string.quoted.double.app-name.shep" }
          }
        }
      ]
    },
    "data-block": {
      "patterns": [
        {
          "match": "^(data)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "captures": {
            "1": { "name": "keyword.declaration.data.shep" },
            "2": { "name": "entity.name.type.data.shep" }
          }
        },
        {
          "match": "^(data)\\s+([A-Z][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.data.shep" },
            "2": { "name": "entity.name.type.data.shep" }
          }
        }
      ]
    },
    "view-block": {
      "patterns": [
        {
          "match": "^(view)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "captures": {
            "1": { "name": "keyword.declaration.view.shep" },
            "2": { "name": "entity.name.type.view.shep" }
          }
        },
        {
          "match": "^(view)\\s+([A-Z][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.view.shep" },
            "2": { "name": "entity.name.type.view.shep" }
          }
        }
      ]
    },
    "action-block": {
      "patterns": [
        {
          "match": "^(action)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "captures": {
            "1": { "name": "keyword.declaration.action.shep" },
            "2": { "name": "entity.name.function.action.shep" }
          }
        },
        {
          "match": "^(action)\\s+([A-Z][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.action.shep" },
            "2": { "name": "entity.name.function.action.shep" }
          }
        }
      ]
    },
    "task-block": {
      "patterns": [
        {
          "match": "^(task)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "captures": {
            "1": { "name": "keyword.declaration.task.shep" },
            "2": { "name": "entity.name.function.task.shep" }
          }
        },
        {
          "match": "^(task)\\s+([A-Z][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.task.shep" },
            "2": { "name": "entity.name.function.task.shep" }
          }
        }
      ]
    },
    "entity-block": {
      "patterns": [
        {
          "match": "^(entity)\\s+([A-Z][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.entity.shep" },
            "2": { "name": "entity.name.type.entity.shep" }
          }
        }
      ]
    },
    "screen-block": {
      "patterns": [
        {
          "match": "^(screen)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\((form|list|detail|dashboard|wizard|api)\\)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.screen.shep" },
            "2": { "name": "entity.name.type.screen.shep" },
            "3": { "name": "support.type.screen-kind.shep" }
          }
        }
      ]
    },
    "flow-block": {
      "patterns": [
        {
          "match": "^(flow)\\s+(\"[^\"]+\")\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.flow.shep" },
            "2": { "name": "string.quoted.double.shep" }
          }
        },
        {
          "match": "^\\s*(\\d+)\\.",
          "captures": {
            "1": { "name": "constant.numeric.step.shep" }
          }
        }
      ]
    },
    "rule-block": {
      "patterns": [
        {
          "match": "^(rule)\\s+(\"[^\"]+\")\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.rule.shep" },
            "2": { "name": "string.quoted.double.shep" }
          }
        }
      ]
    },
    "integration-block": {
      "patterns": [
        {
          "match": "^(integration)\\s+([A-Z][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "keyword.declaration.integration.shep" },
            "2": { "name": "entity.name.type.integration.shep" }
          }
        }
      ]
    },
    "ai-construct": {
      "patterns": [
        {
          "comment": "AI field type: ai(\"prompt\")",
          "begin": "\\b(ai)\\(",
          "beginCaptures": {
            "1": { "name": "keyword.other.ai.shep" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "punctuation.definition.ai.end.shep" }
          },
          "patterns": [
            { "include": "#strings" }
          ],
          "name": "meta.ai-call.shep"
        },
        {
          "comment": "AI step in flow/task",
          "match": "^\\s*(ai)\\s*:",
          "captures": {
            "1": { "name": "keyword.other.ai.shep" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.shep",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.shep",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.shep",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.shep",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "field-types": {
      "patterns": [
        {
          "comment": "Primitive types",
          "name": "support.type.primitive.shep",
          "match": "\\b(text|number|money|email|date|datetime|boolean|file|image|uuid|url|phone|json|array)\\b"
        },
        {
          "comment": "Enum type with values",
          "begin": "\\b(enum)\\(",
          "beginCaptures": {
            "1": { "name": "support.type.enum.shep" }
          },
          "end": "\\)",
          "patterns": [
            {
              "name": "variable.parameter.enum-value.shep",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "name": "punctuation.separator.comma.shep",
              "match": ","
            }
          ]
        },
        {
          "comment": "Relationship to entity",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b(?=\\s*[,\\)\\}]|\\s*$)",
          "captures": {
            "1": { "name": "entity.name.type.reference.shep" }
          }
        },
        {
          "comment": "List type",
          "match": "\\b(list)\\(([A-Z][a-zA-Z0-9_]*)\\)",
          "captures": {
            "1": { "name": "support.type.list.shep" },
            "2": { "name": "entity.name.type.reference.shep" }
          }
        }
      ]
    },
    "modifiers": {
      "patterns": [
        {
          "comment": "Field modifiers in parentheses",
          "match": "\\((required|unique|computed)\\)",
          "captures": {
            "1": { "name": "storage.modifier.shep" }
          }
        },
        {
          "comment": "Standalone modifiers",
          "match": "\\b(required|unique|computed)\\b",
          "name": "storage.modifier.shep"
        },
        {
          "comment": "Constraint modifiers with values",
          "match": "\\b(min|max|default|pattern)\\s*=\\s*",
          "captures": {
            "1": { "name": "storage.modifier.constraint.shep" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "comment": "Top-level declarations",
          "name": "keyword.declaration.shep",
          "match": "\\b(app|data|view|action|task|entity|screen|flow|rule|integration)\\b"
        },
        {
          "comment": "Control flow",
          "name": "keyword.control.shep",
          "match": "\\b(if|else|on|when|then)\\b"
        },
        {
          "comment": "Action keywords",
          "name": "keyword.other.action.shep",
          "match": "\\b(set|save|delete|notify|alert|log|validate|reject|show|hide|redirect)\\b"
        },
        {
          "comment": "Block properties",
          "name": "variable.language.property.shep",
          "match": "\\b(fields|show|filter|sort|input|submit|actions|scope|on)\\b(?=\\s*:)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.shep",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.shep",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.shep",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arrow.shep",
          "match": "â†’|->|=>"
        },
        {
          "name": "keyword.operator.assignment.shep",
          "match": "="
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.begin.shep",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.block.end.shep",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.array.begin.shep",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.shep",
          "match": "\\]"
        },
        {
          "name": "punctuation.separator.colon.shep",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.shep",
          "match": ","
        }
      ]
    }
  }
}
